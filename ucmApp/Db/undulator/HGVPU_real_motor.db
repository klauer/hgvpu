
record(motor, "$(U):$(AXIS)Motor") {
  field(DESC, "$(DESC)")
  field(ASG,  "MC_MAINT")
  field(SCAN, "Passive")
  field(DTYP, "asynMotor")
  field(OUT,  "@asyn($(PORT),$(ADDR))")
  field(DIR,  "Pos")
  field(URIP, "No")
  field(PREC, "4")
  field(EGU,  "mm")
  field(MRES, "$(MRES)")
  field(RDBD, "$(MRES)")
  field(FOFF, "Frozen")
  field(PRIO, "HIGH")
  field(RTRY, "0")
  field(VELO, "$(VELO)")
  field(VBAS, "$(VBAS)")
  field(VMAX, "$(VMAX)")
  field(ACCL, "$(ACCL)")
  field(DHLM, "$(DHLM)")
  field(DLLM, "$(DLLM)")
  field(TWV,  "$(TWV)")
  info(autosaveFields_pass0, "DVAL")
}

